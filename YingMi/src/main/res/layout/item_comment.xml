<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="20dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/social_talk_icon_tv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/home_pic_photo_logout" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/social_talk_username_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_font_micro" />

            <TextView
                android:id="@+id/social_talk_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-5-3 10:21:30"
                android:textColor="@android:color/holo_red_light"
                android:textSize="@dimen/text_font_micro" />
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/social_talk_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:text="我的啊克拉的角色卢卡斯就得啦卡即使离开"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/text_font_micro" />


    <include layout="@layout/layout_underline" />
</LinearLayout>